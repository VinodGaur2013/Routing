<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:alpha="0.7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/grad_color_transparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Welcome"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:textSize="45dp"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/google_maps"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="This app allow you to draw your route, search your current location and nearby hotels, ATM, pizza hut, bus stop, railway station etc."
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:id="@+id/textView2"
                android:textSize="12sp"
                android:layout_margin="5dp" />

            <!--<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:background="@drawable/test_selector"
                android:textColorHint="@color/hint_text"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:gravity="center"
                android:padding="8dp"
                android:id="@+id/etEmail"
                android:textColor="@color/hint_text"
                android:layout_margin="10dp" />

            <!--</android.support.design.widget.TextInputLayout>-->


            <!--<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->

            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/test_selector"
                android:gravity="center"
                android:hint="@string/password"
                android:textColorHint="@color/hint_text"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/hint_text"
                android:layout_margin="10dp" />

            <!--</android.support.design.widget.TextInputLayout>-->


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/test_selector_button"
                    android:text="Login"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/btnSubmit" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"
                android:weightSum="2"
                android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="Forget Password"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/white"
                        android:id="@+id/tvForget"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:layout_marginRight="5dp"
                        android:padding="4dp" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:padding="5dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Register Account"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:id="@+id/tvSignup"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:padding="4dp" />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>